# Database Configuration (Server-only)
# Used by Drizzle ORM to connect to Turso/SQLite database
DATABASE_URL=libsql://your-database.turso.io
DATABASE_AUTH_TOKEN=your_turso_auth_token

# Better Auth Configuration
# Secret key for Better Auth (Server-only)
BETTER_AUTH_SECRET=your_random_secret_key_here

# Better Auth Base URL (Client-accessible)
# Must be prefixed with VITE_ to be available in the client bundle
VITE_BETTER_AUTH_URL=http://localhost:3000

# Test Credentials (Server-only)
# Used for test login functionality
TEST_LOGIN=test@example.com
TEST_PASSWORD=your_test_password
